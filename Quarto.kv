#: kivy 1.11.0
#: import sysexit sys.exit

<Board>:
    spacing: 2, 2
    canvas:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Cell>:
    allow_stretch: True
    keep_ratio: True


<PiecesBar>:
    orientation: 'horizontal'
    size_hint_y: 0.1
    canvas:
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            pos: self.pos
            size: self.size

<EndMessage>:
    title: 'Game Over!'
    size_hint: 0.625, 0.625
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ''
            id: message
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Play Again'
                on_release:
                    app.sm.current_screen.board.reset()
            Button:
                text: 'Main Menu'
                on_release:
                    app.sm.current_screen.board.reset()
                    app.sm.transition.direction = 'right'
                    app.sm.current = 'menu'

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Play'
            on_release:
                app.sm.transition.direction = 'left'
                app.sm.current = 'play'
        Button:
            text: 'Settings'
            # on_release:
                # app.sm.transition.direction = 'right'
                # app.sm.current = 'settings'
        Button:
            text: 'Quit'
            on_release: sysexit(0)

<PlayMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Single-player'
            on_release:
                app.sm.transition.direction = 'left'
                app.sm.current = 'sp'
        Button:
            text: 'Multi-player'
            on_release:
                app.sm.transition.direction = 'left'
                app.sm.current = 'mp'
        Button:
            text: 'Back'
            on_release:
                app.sm.transition.direction = 'right'
                app.sm.current = 'menu'
