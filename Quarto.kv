#: kivy 1.11.0
#: import sysexit sys.exit

<Board>:
    spacing: 2, 2
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Cell>:
    allow_stretch: True
    keep_ratio: True

<PiecesBar>:
    orientation: 'horizontal'

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Play'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'play'
        Button:
            text: 'Settings'
            # on_release:
                # root.manager.transition.direction = 'right'
                # root.manager.current = 'settings'
        Button:
            text: 'Quit'
            on_release: sysexit(0)

<PlayMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Singleplayer'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'sp'
        Button:
            text: 'Multiplayer'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'mp'
        Button:
            text: 'Back'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

